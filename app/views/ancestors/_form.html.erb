<%= form_for([@sender, @ancestor], html: { class: 'form-horizontal' }) do |f| %>
  <% if @ancestor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ancestor.errors.count, "error") %> prohibited this ancestor from being saved:</h2>

      <ul>
      <% @ancestor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :names, 'Nombres', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :names, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_names, 'Apellidos', class: 'col-sm-3 control-label' %>
    <div class="col-sm-9">
      <%= f.text_field :last_names, class: 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Guardar antepasado', class: 'btn btn-success' %>
  </div>
<% end %>
