<h1>Listing ancestors</h1>

<table>
  <thead>
    <tr>
      <th>Names</th>
      <th>Last names</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ancestors.each do |ancestor| %>
      <tr>
        <td><%= ancestor.names %></td>
        <td><%= ancestor.last_names %></td>
        <td><%= link_to 'Show', ancestor %></td>
        <td><%= link_to 'Edit', edit_ancestor_path(ancestor) %></td>
        <td><%= link_to 'Destroy', ancestor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

